pkgname="fixme-arch"
pkgver=0
pkgrel=1
pkgdesc="A dummpy package for build up my favorite archlinux environment"
arch=('any')
# apps
depends=(vim emacs git mutt getmail msmtp ghc cabal-install bash-completion sudo gdb openssh)
# X drivers
depends+=(xf86-input-mouse xf86-input-keyboard xf86-input-synaptics xf86-video-intel)
# X services
depends+=(xorg-server xorg-xinit xorg-font-utils ttf-dejavu wqy-zenhei)
# X applications
depends+=(xorg-xrandr xorg-xmodmap xorg-xsetroot xorg-xrdb xorg-xdpyinfo)
# xmonad desktop environment
depends+=(xmonad dmenu rxvt-unicode xcompmgr fcitx xlockmore)
# GUI apps
depends+=(chromium)
license=('GPL')
